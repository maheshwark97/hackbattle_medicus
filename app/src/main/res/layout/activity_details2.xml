<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_details2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="byteofpi.com.medicus.DetailsActivity"
    android:orientation="vertical"
    android:background="#c8e6c9">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:elevation="5dp"
        android:background="#a5d6a7">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/Start_text"
        android:text="Please Connect to google account"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:typeface="monospace" />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:paddingTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Fill in the Following Details"
            android:textSize="20sp"
            android:paddingTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameWrapper"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:typeface="monospace">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Name"
            android:id="@+id/name"
            android:textStyle="bold"
            android:typeface="monospace"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bloodGroupwrapper"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:typeface="monospace">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Blood Group"
            android:id="@+id/bloodgroup"
            android:textStyle="bold"
            android:typeface="monospace"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addresswrapper"
        android:paddingTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Address"
            android:id="@+id/address"
            android:textStyle="bold"
            android:typeface="monospace"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fatherwrapper">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Fathers Name"
            android:id="@+id/father"
            android:textStyle="bold"
            android:typeface="monospace"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/insurancewrapper"
        android:paddingTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Insurance Number"
            android:id="@+id/insurance"
            android:textStyle="bold"
            android:typeface="monospace"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allergieswrapper"
        android:paddingTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Any Specific Allergies"
            android:id="@+id/allergies"
            android:textStyle="bold"
            android:typeface="monospace"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to Continue"
        android:id="@+id/Continue_button"
        android:layout_margin="3dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="15sp"/>
    </LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>
